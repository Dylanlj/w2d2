<html>
  <body>
    <% if(user === ''){ %>
      <form action="/login" method="POST" style="margin:150px;">
        <label for="email">Email:</label>
        <input id="email" type="text" name="email"  style="width: 300px">
        <div></div>        
        <label for="password">Password:</label>
        <input id="password" type="text" name="password"  style="width: 300px">
        <input type="submit" value="Submit">        
      </form>  
    <% } else { %>
      <p>You're already signed in</p>
      <form action="/logout" method="POST" style="margin:150px;">
        <input type="submit" value="Logout">
      </form>  
    <% } %>


    
